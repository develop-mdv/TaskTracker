# Database (пароль в DATABASE_URL должен совпадать с POSTGRES_PASSWORD)
POSTGRES_PASSWORD="postgres"
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/tasktracker?schema=public"

# NextAuth
# ВАЖНО: обязательно https:// для production за nginx!
NEXTAUTH_URL="https://your-domain.com"
# Сгенерируйте: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_WITH_openssl_rand_-base64_32"

# MinIO / S3
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="attachments"
MINIO_USE_SSL="false"

# Cron secret (protect cron endpoints)
CRON_SECRET="change-me-to-a-random-string"

# Seed user
SEED_EMAIL="admin@tasktracker.local"
SEED_PASSWORD="admin123"
