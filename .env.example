# Database (пароль в DATABASE_URL должен совпадать с POSTGRES_PASSWORD)
POSTGRES_PASSWORD="postgres"
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/tasktracker?schema=public"

# NextAuth
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="change-me-to-a-random-secret-at-least-32-chars"

# MinIO / S3
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="attachments"
